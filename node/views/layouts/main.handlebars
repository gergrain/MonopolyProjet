<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
    <script src="/bootstrap/js/jquery.min.js"></script>
    <script src="/js/cartes.js"></script>
    <link rel="stylesheet" href="/css/stylesheet.css"/>
    <script>
$(document).ready(function(){
    $("img").each(function(i){
        if($(this).attr('id')==='img_centre'){
            
        }else{
            var name = 'img_zoom_image';
            $("body").append("<div class='zoom' id='"+name+i+"' style='position:absolute; visibility:hidden; left:-286px; top:0px; z-index:1000;'><figure><img id='img_zoom_image' src='"+$(this).attr('src')+"'  /><figcaption>"+$(this).attr('title')+"</figcaption></figure></div>");

            var my_tooltip = $("#"+name+i);

            $(this).mouseover(function(){
                    my_tooltip.css({opacity:1, display:"none", visibility:"visible"}).fadeIn(0);
            }).mousemove(function(kmouse){
                    my_tooltip.css({left:kmouse.pageX+15, top:kmouse.pageY+15});
            }).mouseout(function(){
                    my_tooltip.fadeOut(0);
            });
        }
	}); 
    
});

    </script>
    
    
	<title>Board</title>
</head>
